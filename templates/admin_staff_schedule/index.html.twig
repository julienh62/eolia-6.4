{% extends 'base.html.twig' %}

{% block title %}StaffSchedule index{% endblock %}

{% block body %}
    <h1>StaffSchedule index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Start</th>
                <th>End</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for staff_schedule in staff_schedules %}
            <tr>
                <td>{{ staff_schedule.id }}</td>
                <td>{{ staff_schedule.title }}</td>
                <td>{{ staff_schedule.start ? staff_schedule.start|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ staff_schedule.end ? staff_schedule.end|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_staff_schedule_show', {'id': staff_schedule.id}) }}">show</a>
                    <a href="{{ path('app_admin_staff_schedule_edit', {'id': staff_schedule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_formChooseCalendar') }}">Create new</a>
{% endblock %}
